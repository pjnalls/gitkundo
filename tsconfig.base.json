{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@gitkundo/backend/db": ["./libs/backend/db/src/index.ts"],
      "@gitkundo/backend/db/testing": ["./libs/backend/db/src/index.spec.ts"]
    }
  }
}
